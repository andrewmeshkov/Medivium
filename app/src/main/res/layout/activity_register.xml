<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".register" android:background="@drawable/papiro" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="ПОЧТА"
            android:inputType="textEmailAddress"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintEnd_toEndOf="@+id/etPwd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etPwd"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:id="@+id/etEmail" />

        <com.wang.avi.AVLoadingIndicatorView android:layout_height="29dp" android:layout_width="24dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="750dp" android:id="@+id/loader1" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:indicatorName="BallScaleMultipleIndicator" app:indicatorColor="@android:color/holo_orange_light" android:visibility="gone" android:elevation="10dp" android:layout_marginBottom="750dp" android:layout_marginEnd="411dp" android:layout_marginStart="411dp" android:layout_gravity="center" style="@style/AVLoadingIndicatorView.Large"/>

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="70dp"
        android:ems="10"
        android:hint="ПАРОЛЬ"
        android:inputType="textPassword"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintEnd_toEndOf="@+id/btn"
        app:layout_constraintStart_toStartOf="@+id/btn"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <Button
        android:id="@+id/btn"
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/round_btn_orange"
        android:text="ЗАРЕГЕСТРИРОВАТЬСЯ"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv"
        app:layout_constraintEnd_toEndOf="@+id/tv"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/tv" />

    <TextView android:layout_height="24dp" android:layout_width="307dp" app:layout_constraintTop_toBottomOf="@+id/etPwd" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/black" android:layout_marginTop="115dp" android:id="@+id/tv" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="114dp" android:text="УЖЕ ЕСТЬ АККАУНТ ? ВОЙДИТЕ ЗДЕСЬ" android:textSize="16sp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="128dp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="78dp"
        app:layout_constraintBottom_toTopOf="@+id/etEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/log" />

</androidx.constraintlayout.widget.ConstraintLayout>